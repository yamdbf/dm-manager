{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2017",
        "lib": [
            "es7"
        ],
        "declaration": true,
        "sourceMap": true,
		"removeComments": false,
		"skipLibCheck": true
    },
	"exclude": [
		"node_modules",
		"bower_components",
		"jspm_packages",
		"tmp",
		"temp",
		"bin",
		"docs",
		"pkg",
		"examples"
	]
}